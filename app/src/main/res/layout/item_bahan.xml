<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/oranye"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <RelativeLayout
            android:id="@+id/rlListBahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBahan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btnDeleteBahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ivBahan"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/merah"
                android:text="hapus" />
            <RelativeLayout
                android:id="@+id/rlAttributeBahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ivBahan">

                <TextView
                    android:id="@+id/tvNamaBahanUtama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    tools:text="Nama Bahan" />
                <TextView
                    android:id="@+id/tvNamaBahanLain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNamaBahanUtama"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:text="Bahan lain" />
                <TextView
                    android:id="@+id/tvWaktuTerdeteksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNamaBahanLain"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    tools:text="Waktu Terdeteksi" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>