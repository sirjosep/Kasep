<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <RelativeLayout
            android:id="@+id/rlListBahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlAttributeMyPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvNamaRekomendasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    tools:text="Rekomendasi " />
                <TextView
                    android:id="@+id/tvJumlahResep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNamaRekomendasi"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    tools:text="Jumlah Resep" />
                <TextView
                    android:id="@+id/tvWaktuRekomendasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvJumlahResep"
                    android:textColor="@color/black"
                    android:textSize="19sp"
                    tools:text="Waktu Rekomendasi" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rlNavigasiMyRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/rlAttributeMyPreview">

                <ImageButton
                    android:id="@+id/btnLihatDetailMyRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_oranye" />
                <TextView
                    android:id="@+id/tvLihatDetailMyRecipe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:text="Lihat Detail"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>